<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textAllCaps">false</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="colorPrimary">@color/mColorPrimary</item>
        <item name="colorPrimaryDark">@color/mColorPrimaryDark</item>
        <item name="colorAccent">@color/mColorAccent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:fontFamily">sans-serif</item>
        <!--取消水波纹效果-->
        <!--        <item name="android:colorControlHighlight">@android:color/transparent</item>-->
    </style>

    <!--Toolbar-->
    <style name="actionBarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
    </style>
</resources>